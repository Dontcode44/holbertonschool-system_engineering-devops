#!/usr/bin/env bash
# Configure your Nginx server so that /redirect_me

sudo apt -y update
sudo apt -y install nginx
echo "Hello World" > /var/www/html/index.html
new_string="root /var/www/html;\n\trewrite ^\/redirect_me https:\/\/www.youtube.com\/watch?v=cXR_nUy-YhY permanent;"
sed -i "s/root /var/www/html;/$new_string/" /etc/nginx/sities-avaible/default

service nginx restart
